<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="6dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_debit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#F0F5FA"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
        app:strokeWidth="0dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_card"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:src="@drawable/visa" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/sen_regular"
        android:gravity="center"
        android:text="Visa"
        android:textColor="#464E57"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/card_debit"
        app:layout_constraintStart_toStartOf="@id/card_debit"
        app:layout_constraintTop_toBottomOf="@id/card_debit" />
</androidx.constraintlayout.widget.ConstraintLayout>